@*the @ symbols indicated that there's c# code to be evaluated during
    the rendering of this view.

    @model, indicate what's this view is going to work with in terms of
    the data that is pass into it whch is Inumerable of a product
    use using statement because you don't want to wrote globalantics.domains.models
    .product
*@
@using Globomantics.Domain.Models;
@model IEnumerable<Product>


@{
    ViewData["Title"] = "Home";
}

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-body">
              
                <h5 class="card-title">Available events</h5>
                <table class="table">
                    <caption>Last updated @DateTimeOffset.UtcNow.ToString("R")</caption>
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Name</th>
                            <th scope="col">Price</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td><img src="~/img/products/@(product.ProductId).jpg" width="150" /></td>
                                <td>
                                    @*using tag helper to produce a link to a particular action*@
                                    <a asp-action="TicketDetails"
                                       asp-controller="Home"
                                       asp-route-productId="@product.ProductId"
                                       asp-route-slug="@product.Name">@product.Name</a>
                                 </td>
                                <td>@product.Price.ToString("c")</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="Add">
                                        <input type="hidden" name="product.productId" value="@product.ProductId" />
                                        <input type="submit" value="Add to cart" class="btn btn-primary" />
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-5">
        <div class="card">
            <div class="card-body">
                TBA: Shopping Cart
            </div>
        </div>
    </div>

</div>